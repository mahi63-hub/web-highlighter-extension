{
  "manifest_version": 3,
  "name": "Web Highlighter & Notes",
  "version": "0.2.0",
  "description": "Highlight text and add notes on any webpage.",
  "permissions": ["activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Highlighter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
