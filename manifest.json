{
  "manifest_version": 3,
  "name": "Web Highlighter & Notes",
  "version": "1.0",
  "description": "Highlight text in multiple colors with notes, persistence & popup viewer.",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Highlights"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
